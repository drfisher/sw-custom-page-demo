@import 'normalize-stylus'

body
html
	margin: 0
	padding: 0
	height: 100%
	width: 100%

body
	background-image: url(/img/body_bg.png)
	color: #333
	font-family: Helvetica, Arial, sans-serif

h1
	margin-top: 0

.layout
	background: rgba(255, 255, 255, .8)
	border-radius: 6px
	box-sizing: border-box
	margin: 1em auto
	max-width: 600px
	padding: 2em

	&__header
		margin-bottom: 2em
		text-align: center

		&__logo
			background: url(/img/simpsons.png) 50% 50% no-repeat;
			background-size: 208px
			display: inline-block
			height: 90px
			width: 208px

.avatar
	height: 80px
	width: 80px

.articles-list
	padding: 0
	list-style: none
	margin-bottom: 1.5em

	&__item
		margin-bottom: .5em;

		.offline &
			filter: grayscale(100%)
			opacity: .75

		.offline &.cached
			filter: none
			opacity: 1

.offline-notification
	background: #fff
	bottom: 0
	opacity: 0
	position: fixed
	text-align: center
	transition: opacity .3s ease-in-out, transform .3s ease-in-out
	transform: translateY(100%)
	width: 100%

	&__inner
		display: inline-block
		margin: .75em auto
		max-width: 600px

	.offline &
		opacity: 1
		transform: translateY(0)

.photo
	float: left
	margin: 0 1.5em 1.5em 0
	width: 100px
